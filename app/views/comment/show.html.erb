<div class="container">
  <div class="row">
    <h2 class="col-md-8 col-xs-12 offset-md-2"><%= @board.title %></h2>
  </div>
  <div class="row mt-2">
    <div class="col-md-6 col-xs-12 offset-md-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= @comment.id %>. <%=@comment.name %></h5>
          <p class="card-text"><%= simple_format(@comment.body)  %></p>
          <%= form_tag(comment_show_path(@comment.id), method: :get, class: "form-inline mr-2", style: "display: inline") do %>
            <div class="form-group" style="display: inline">
              <button type="submit" class="text-secondary btn-boarder"><i class="fas fa-reply"></i></button>
              <input type="hidden" name="board_id" value="<%= @board.id %>">
            </div>
          <% end %>
          <%= form_tag(comment_destroy_path(@comment.id), method: :delete, class: "form-inline", style: "display: inline") do %>
            <div class="form-group" style="display: inline">
              <button type="submit" class="text-danger btn-border"><i class="fas fa-trash-alt"></i></button>
              <input type="hidden" name="board_id" value="<%= @board.id %>">
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row mt-5">
    <h4 class="col-md-8 col-xs-12 offset-md-3"><%= @comment.id %>に返信する</h4>
  </div>
  <div class="row">
    <div class="col-md-6 col-xs-12 offset-md-3">
      <%= form_tag(comment_reply_path, method: :put) do %>
        <div class="form-group">
          <input type="text" class="form-control mb-1" name="name" placeholder="名前">
          <textarea name="body" class="form-control" placeholder="投稿内容"></textarea>
          <button type="submit" class="btn btn-primary mt-2">返信</button>
          <input type="hidden" name="board_id" value="<%= @board.id %>">
        </div>
      <% end %>
    </div>
  </div>
</div>